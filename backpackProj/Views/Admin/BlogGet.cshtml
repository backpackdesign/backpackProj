@model backpackProj.Models.classes.Blog
@{
    ViewBag.Title = "BlogGet";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 style="margin:20px">Blog Güncelleme Sayfası</h4>
<br />
@using (Html.BeginForm("BlogGuncelle", "Admin", FormMethod.Post))
{

    <h6>Blog Id</h6>
    <div class="form-group row">
        <div class="col-8">
            @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly="readonly"})
        </div>
    </div>

    <h6>Blog Başlığı</h6>
    <div class="form-group row">
        <div class="col-8">
            @Html.TextBoxFor(x => x.BASLIK, new { @class = "form-control", Style = "background:#44BDF0; color:white; font-size:medium ", PlaceHolder = " Blog başlığı giriniz..." })
        </div>
    </div>
    <br />
    <h6>Blog Tarihi</h6>
    <div class="form-group row">
        <div class="col-8">
            @Html.TextBoxFor(x => x.TARIH, new { @class = "form-control", Style = "background:#44BDF0; color:white; font-size:medium ", PlaceHolder = " Blog tarihi giriniz..." })
            @*<input class="form-control" style="background:#44BDF0; color:white; font-size:medium " type="date" id="example-datetime-local-input">*@
        </div>
    </div>
    <br />
    <h6>Blog Fotoğrafı (Geçerli bir fotoğraf linki giriniz.)</h6>
    <div class="form-group row">
        <div class="col-8">
            @Html.TextBoxFor(x => x.BLOGIMAGE, new { @class = "form-control", Style = "background:#44BDF0; color:white; font-size:medium ", PlaceHolder = " Blog fotoğraf linki..." })
        </div>
    </div>
    <br />
    <h6>Blog Açıklaması</h6>
            @Html.TextAreaFor(x => x.ACIKLAMA, new { @class = "form-control", Style = "background:#44BDF0; color:white; font-size:medium", PlaceHolder = " Blog açıklaması giriniz..." })
       
    <br />
    <button href="/Admin/BlogGuncelle" class="btn btn-success ">BLOĞU GÜNCELLE</button>
}

